{
    "name": "easyform/easyform",
    "description": "The most intuitive PHP form builder and data list manager with visual builders, drag & drop, and 50+ field types",
    "type": "library",
    "keywords": [
        "form",
        "form-builder",
        "list",
        "data-table",
        "php",
        "semantic-ui",
        "drag-drop",
        "visual-builder",
        "ajax",
        "validation"
    ],
    "homepage": "https://github.com/easyform/easyform",
    "license": "MIT",
    "authors": [
        {
            "name": "EasyForm Team",
            "email": "support@easyform.com",
            "homepage": "https://easyform.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "EasyForm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EasyForm\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "extra": {
        "laravel": {
            "providers": [
                "EasyForm\\Laravel\\EasyFormServiceProvider"
            ],
            "aliases": {
                "EasyForm": "EasyForm\\Laravel\\Facades\\EasyForm",
                "EasyList": "EasyForm\\Laravel\\Facades\\EasyList"
            }
        }
    }
}